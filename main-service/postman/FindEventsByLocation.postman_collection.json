					"script": {
						"exec": [
							"async function main() {\r",
							"  const userId = await addUser();\r",
							"  const catId = await addCategory();\r",
							"  addEvent(catId, userId);\r",
							"  addEvent2(catId,userId);\r",
							"  addEvent3(catId, userId);\r",
							"}\r",
							"\r",
							"main();\r",
							"\r",
							"async function addEvent(catId,userId){\r",
							"    const response = await pm.sendRequest({\r",
							"    url: 'http://localhost:8080/users/'+ userId + '/events',\r",
							"    method: 'POST',\r",
							"    header: {\"Content-Type\": \"application/json\"},\r",
							"    body: {\r",
							"        mode: 'raw',\r",
							"        raw: JSON.stringify(\r",
							"        {\r",
							"            \"annotation\": \"Сплав на байдарках похож на полет.\",\r",
							"            \"category\": catId,\r",
							"            \"description\": \"Сплав на байдарках похож на полет. На спокойной воде — это парение. На бурной, порожистой — выполнение фигур высшего пилотажа. И то, и другое дарят чувство обновления, феерические эмоции, яркие впечатления.\",\r",
							"            \"eventDate\": \"2027-12-31 15:10:05\",\r",
							"            \"location\": {\r",
							"                \"lat\": 70.854167,\r",
							"                \"lon\": 69.62\r",
							"            },\r",
							"            \"paid\": true,\r",
							"            \"participantLimit\": 10,\r",
							"            \"requestModeration\": false,\r",
							"            \"title\": \"Сплав на байдарках\"\r",
							"        })\r",
							"        }\r",
							"    });\r",
							"    pm.variables.set('locationId', response.json().location.id);\r",
							"}\r",
							"\r",
