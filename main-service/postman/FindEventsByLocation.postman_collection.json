							"\r",
							"async function addCategory(){\r",
							"    const response = await pm.sendRequest({\r",
							"    url: 'http://localhost:8080/admin/categories',\r",
							"    method: 'POST',\r",
							"    header: {\"Content-Type\": \"application/json\"},\r",
							"    body: {\r",
							"        mode: 'raw',\r",
							"        raw: JSON.stringify({name:randomName()})\r",
							"    }\r",
							"    });\r",
							"    return response.json().id;\r",
							"}\r",
							"\r",
							"async function addUser(){\r",
							"    const response = await pm.sendRequest({\r",
							"    url: 'http://localhost:8080/admin/users',\r",
							"    method: 'POST',\r",
							"    header: {\"Content-Type\": \"application/json\"},\r",
							"    body: {\r",
							"        mode: 'raw',\r",
							"        raw: JSON.stringify(generateUser())\r",
							"    }\r",
							"    });\r",
							"    return response.json().id;\r",
							"}\r",
							"\r",
							"function generateUser(){\r",
							"  const data = {\r",
							"    name:randomName(), \r",
							"    email:generateEmail()\r",
							"    }\r",
							"return data;\r",
							"}\r",
							"\r",
							"function generateEmail() {\r",
							"  const randomString = Math.random().toString(36).substring(2, 15);\r",
							"  return `${randomString}@gmail.com`;\r",
							"}\r",
							"function randomName(){\r",
							"    const randomString = Math.random().toString(36).substring(2, 15);\r",
							"  return `${randomString}`;\r",
							"}\r",
